<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chanicpanic.chanicpanicmobile.menu.MainActivity">

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"
        android:text="@string/chanic_panic_trademarked"
        android:textSize="@dimen/_40sdp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <FrameLayout
        android:id="@+id/spotlightFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/layoutAbilitySpotlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:id="@+id/txtSpotlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/ability_spotlight"
                android:textAlignment="center"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/txtSpotlightName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textColor="@color/colorPrimaryDark"
                tools:text="@string/ability_name_trader" />

            <TextView
                android:id="@+id/txtSpotlightDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textColor="@color/colorPrimary"
                tools:text="@string/ability_description_trader" />

            <TextView
                android:id="@+id/txtSpotlightComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:textColor="@color/team2"
                android:textStyle="italic"
                tools:text="@string/ability_commentary_trader" />
        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btnNewGame"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/icon_plus"
        android:text="@string/home_button1" />

    <Button
        android:id="@+id/btnLoadGame"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/icon_load"
        android:text="@string/home_button2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnInstructions"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/icon_help"
        android:text="@string/how_to_play" />

    <Button
        android:id="@+id/btnSettings"
        style="@style/AppTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_weight="1"
        android:drawableStart="@drawable/icon_settings"
        android:text="@string/settings"
        android:textAlignment="center"
        android:visibility="visible" />

</android.widget.LinearLayout>
