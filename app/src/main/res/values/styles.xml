<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_background</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTheme.AbilityButton" parent="AppTheme.Button">
        <item name="background">@drawable/ability_button</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/ability_button_diameter</item>
        <item name="android:layout_width">@dimen/ability_button_diameter</item>
    </style>

    <style name="AppTheme.CardView" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/CardView_text_size</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_width">@dimen/CardView_width</item>
        <item name="android:layout_height">@dimen/CardView_height</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme.CardGroupView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppTheme.Dialog">
        <item name="android:background">#FFFFFF</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.Seekbar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressDrawable">@android:color/transparent</item>
    </style>

</resources>
